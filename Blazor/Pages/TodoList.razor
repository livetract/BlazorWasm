@page "/todolist"

@inject IWeatherService WeatherService

<h3>Todo List</h3>


<table class="table">
    <thead>
        <tr>
            <th scope="col">序号</th>
            <th scope="col">标题</th>
            <th scope="col">内容</th>
            <th scope="col">是否完成</th>
        </tr>
    </thead>
    <tbody>

        @if (Items != null)
        {
            @foreach (var item in Items)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>@item.Content</td>
                    <td>@item.IsCompleted</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <th scope="row">-</th>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
        }

    </tbody>
</table>

@code { 

    public IEnumerable<TodoItem> Items { get; set; }


    protected async override Task OnInitializedAsync()
    {

        Items = await WeatherService.GetTodoItemsAsync();
    }
}
