@page "/todolist"
@using Wasm.Dtos
@using Wasm.Services

@inject ITodoService TodoProvider

<h1>Todo List</h1>


@if (_items == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>序号</th>
            <th>标题</th>
            <th>内容</th>
            <th>是否完成</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in _items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.IsCompleted</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private IEnumerable<TodoItem> _items;

    protected override async Task OnInitializedAsync()
    {
        _items = await TodoProvider.GetItemsAsync();
    }

}